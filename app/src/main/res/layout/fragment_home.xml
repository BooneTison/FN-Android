<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <ImageButton
        android:id="@+id/transportation_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/transportation_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/events_button"
        app:layout_constraintEnd_toStartOf="@+id/dining_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/ic_baseline_directions_car_24"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/dining_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/dining_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/athletics_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".7"
        app:srcCompat="@drawable/ic_outline_food_bank_24"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/hours_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/hours_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/dates_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dining_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".73"
        app:srcCompat="@drawable/ic_baseline_access_time_24"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/events_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/events_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/athletics_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".6"
        app:srcCompat="@drawable/ic_baseline_event_note_24"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/athletics_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/athletics_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".6"
        app:srcCompat="@drawable/ic_baseline_sports_basketball_24"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/dates_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/dates_text"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_baseline_school_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/athletics_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".58"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/health_safety_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/health_safety_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/map_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/events_button"
        app:layout_constraintVertical_bias=".4"
        app:srcCompat="@drawable/baseline_health_and_safety_24"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/map_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/map_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/athletics_button"
        app:layout_constraintVertical_bias=".4"
        app:srcCompat="@drawable/ic_outline_map_24"
        app:tint="@color/furman_purple" />

    <ImageButton
        android:id="@+id/phone_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@color/transparent"
        android:contentDescription="@string/phone_text"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map_button"
        app:layout_constraintTop_toBottomOf="@+id/dates_button"
        app:layout_constraintVertical_bias=".48"
        app:srcCompat="@drawable/ic_baseline_local_phone_24"
        app:tint="@color/furman_purple" />

    <TextView
        android:id="@+id/transportation_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="@string/transportation_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/dining_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transportation_button" />

    <TextView
        android:id="@+id/dining_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="@string/dining_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hours_button"
        app:layout_constraintStart_toEndOf="@+id/transportation_button"
        app:layout_constraintTop_toBottomOf="@+id/dining_button" />

    <TextView
        android:id="@+id/hours_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="@string/hours_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dining_button"
        app:layout_constraintTop_toBottomOf="@+id/hours_button" />

    <TextView
        android:id="@+id/events_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="@string/events_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/athletics_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/events_button" />

    <TextView
        android:id="@+id/athletics_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="@string/athletics_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/dates_button"
        app:layout_constraintStart_toEndOf="@+id/events_button"
        app:layout_constraintTop_toBottomOf="@+id/athletics_button" />

    <TextView
        android:id="@+id/dates_button_text"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/dates_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/athletics_button"
        app:layout_constraintTop_toBottomOf="@+id/dates_button" />

    <TextView
        android:id="@+id/health_safety_button_text"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/health_safety_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/map_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_safety_button" />

    <TextView
        android:id="@+id/map_button_text"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/map_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/phone_button"
        app:layout_constraintStart_toEndOf="@+id/health_safety_button"
        app:layout_constraintTop_toBottomOf="@+id/map_button" />

    <TextView
        android:id="@+id/phone_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="@string/phone_text"
        android:textColor="@color/furman_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map_button"
        app:layout_constraintTop_toBottomOf="@+id/phone_button" />

    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/dining_button"
        app:layout_constraintEnd_toEndOf="@+id/hours_button"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/transportation_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/WeatherLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/dining_button"
        app:layout_constraintEnd_toEndOf="@+id/homeImage"
        app:layout_constraintStart_toStartOf="@+id/homeImage"
        app:layout_constraintTop_toTopOf="@+id/homeImage">

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="67dp"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/lowTemp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/highTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lowTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/highTemp" />

        <TextView
            android:id="@+id/emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/precipitationPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/emoji" />

        <TextView
            android:id="@+id/alertText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#FF0E0E"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/currentTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="@string/version_text"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CreditsLayout"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:background="@color/furman_dark_gray"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dismiss_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/credits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/credits_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:text="@string/credits1_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credits_title" />

        <TextView
            android:id="@+id/credits_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:text="@string/credits2_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credits_text1" />

        <TextView
            android:id="@+id/credits_text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:text="@string/version_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credits_text2" />

        <TextView
            android:id="@+id/credits_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:text="@string/credits3_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credits_text3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>